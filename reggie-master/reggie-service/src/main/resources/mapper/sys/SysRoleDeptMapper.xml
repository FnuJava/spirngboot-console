<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sz.youban.service.sys.mapper.SysRoleDeptDao">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.sz.youban.entity.SysRoleDept">
		<id column="id" property="id" />
		<result column="role_id" property="roleId" />
		<result column="dept_id" property="deptId" />
	</resultMap>


	<insert id="save">
		insert into sys_role_dept
		(
			`role_id`, 
			`dept_id`
		)
		values
		<foreach collection="deptIdList" item="item" index="index" separator="," >
		(
			#{roleId}, 
			#{item} 
		)
		</foreach>
	</insert>
	
	<delete id="deleteByRoleId">
		delete from sys_role_dept where role_id = #{value}
	</delete>
	
	<select id="queryDeptIdList" resultType="long">
		select dept_id from sys_role_dept where role_id = #{value}
	</select>
</mapper>
